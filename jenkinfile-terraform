pipeline {
    agent any

    parameters {
        choice(name: 'Action', choices: ['apply', 'destroy'], description: 'Terraform Action')
    }

    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/pjyoti1395/hotstar-clone-app-ci-cd-k8'
            }
        }

        stage('Terraform Version Check') {
            steps {
                sh 'terraform --version'
            }
        }

        stage('Terraform Initialize') {
            steps {
                dir('EKS_TERRAFORM') {
                    sh 'terraform init -reconfigure'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('EKS_TERRAFORM') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('EKS_TERRAFORM') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply/Destroy') {
            steps {
                dir('EKS_TERRAFORM') {
                    script {
                        if (params.Action == 'apply') {
                            sh '''
                                echo "üîÅ Updating kubeconfig to connect to EKS..."
                                aws eks update-kubeconfig --region us-east-1 --name EKS_CLOUD

                                echo "üßπ Deleting aws-auth ConfigMap if it exists..."
                                set +e
                                kubectl get configmap aws-auth -n kube-system
                                if [ $? -eq 0 ]; then
                                  kubectl delete configmap aws-auth -n kube-system
                                  echo "‚úÖ Deleted existing aws-auth configmap"
                                  sleep 5
                                else
                                  echo "‚ÑπÔ∏è aws-auth configmap does not exist"
                                fi
                                set -e

                                echo "üöÄ Running terraform apply..."
                                terraform apply --auto-approve
                            '''
                        } else {
                            sh '''
                                echo "üîÅ Updating kubeconfig to connect to EKS..."
                                aws eks update-kubeconfig --region us-east-1 --name EKS_CLOUD

                                echo "üî• Running terraform destroy..."
                                terraform destroy --auto-approve
                            '''
                        }
                    }
                }
            }
        }
    }
}
